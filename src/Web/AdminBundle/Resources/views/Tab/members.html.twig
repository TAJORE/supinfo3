<div class="row" style="position: relative">

    <div id="number_of_users">{% trans from 'admin' %}admin.members.number {% endtrans %}: </div>
    <div id="nb_users_div"><span id="total_users"></span></div>
    <div id="nbusers">Number of selected users:
        <span class="badge badge-pill badge-success nbrofchkbox"></span>
    </div>
    <div id="order-zone">
        <select id="cb-property" class="cb-order">
            <option value="joinDate">{% trans from 'admin' %}admin.members.fltjdate {% endtrans %}</option>
            <option value="firstName">{% trans from 'admin' %}admin.members.fltfname {% endtrans %}</option>
            <option value="country">{% trans from 'admin' %}admin.members.fltcountry {% endtrans %}</option>
        </select>
        <select id="cb-order" class="cb-order">
            <option value="ASC">{% trans from 'admin' %}admin.members.ordasc {% endtrans %}</option>
            <option value="DESC">{% trans from 'admin' %}admin.members.orddesc {% endtrans %}</option>
        </select>
        <button id="btn-order-users" class="btn btn-default">{% trans from 'admin' %}admin.members.filter {% endtrans %}</button>
    </div>
    <br/>
    <div id="users-loader">
        <img src="{{ asset('dist/loader.gif') }}"/>
    </div>
    <table id="user_list" class="table table-bordered table-hover table-sm table-striped table-success users_table">
       <thead>
           <tr>
               <th>#</th>
               <th>{% trans from 'admin' %}admin.members.firstname {% endtrans %}</th>
               <th>{% trans from 'admin' %}admin.members.country {% endtrans %}</th>
               <th>Email</th>
               <th>{% trans from 'admin' %}admin.members.gender {% endtrans %}</th>
               <th>{% trans from 'admin' %}admin.members.status {% endtrans %}</th>
               <th>{% trans from 'admin' %}admin.members.vip {% endtrans %}</th>
               <th>{% trans from 'admin' %}admin.members.select {% endtrans %}</th>
           </tr>
       </thead>
        <tbody id="users_table_body">

        </tbody>
    </table>
