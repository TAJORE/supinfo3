{% endblock %}

{% block main %}
    <div class="row" id="mainSucces">
        <div class="card bg-success">
            <div class="card-block">
                <h4 class="card-title">{% trans from 'success' %} body.title  {% endtrans %}</h4>
                <h6 class="card-subtitle mb-2 text-muted">{% trans from 'success' %} body.context  {% endtrans %}</h6>
                <p class="card-text">{% trans with {'emailadress':message.email} from 'success' %} body.content  {% endtrans %}</p>
                <a href="{{ path('main_profile') }}" class="card-link">{% trans from 'success' %} body.link1  {% endtrans %}</a>
            </div>
        </div>
    </div>
{% endblock %}

