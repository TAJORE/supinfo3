{% extends 'MainBundle::layout.html.twig' %}

{% block meta %}
    <meta name = "{% trans from 'user-profile' %} refer.title {% endtrans %}" >
    <meta name = "keywords" content = "{% trans from 'user-profile' %} refer.description {% endtrans %}" >
{% endblock %}

{% block title %}
    {% trans from 'user-profile' %} title {% endtrans %}
{% endblock  %}

{% block mycss %}
    {{ parent() }}
    {# mettre le css si la page t'oublige #}
{% endblock %}

{% block header %}
    <div id="profile-nav">
        {% include "MainBundle:Inc:main-nav.html.twig" %}
        {% include "MainBundle:Inc:matches.html.twig" %}
        {% if app.request.get("next")=="yes" %}
            {% if  app.user.isEmailVerified==0 %}
                {% include "MainBundle:Modal:confirm-email.html.twig" %}
            {% endif %}
        {% endif %}
    </div>
{% endblock %}
{% block mainLg %}

    <div class="row bg-faded profile" id="mainUserProfile" data-page="mainUserProfile">
        <div class="col col-md-2" id="important">
            {% include "MainBundle:Inc:important.html.twig" %}
        </div>
        <div class="col-md-8 col-sm-12 card" id="main-body">
            <div class="card-block">
                <div class="row" id="notification-alert">
                    {% include "MainBundle:Alert:include.html.twig" %}
                </div>
                <div id="search" class="row">
                    <div class="col">
                        <h4>
                            {% trans from 'user-profile' %} search.title {% endtrans %}
                        </h4>
                    </div>
                    <div class="col-1">
                        <a href="#filter" class="text-muted" data-toggle="collapse" ria-expanded="false" aria-controls="collapseExample"><span class="fa fa-2x fa-plus-square-o"></span></a>
                    </div>
                    <div class="collapse show col-12" id="filter">
                        <div class="card card-block bg-faded">
                            <form>
                                <div class="row">

                                    <div id="accordion" role="tablist" aria-multiselectable="true" class="col-sm-12">
                                        <div class="card">
                                            <div class="card-header bg-white text-gray-dark" role="tab" id="headingOne">
                                                <h5 class="mb-0">
                                                    <a class="text-gray-dark" data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                                        {% trans from 'user-profile' %} search.zone.title {% endtrans %}
                                                    </a>
                                                </h5>
                                            </div>

                                            <div id="collapseOne" class="collapse bg-faded" role="tabpanel" aria-labelledby="headingOne">
                                                <div class="card-block">
                                                    <div class=" col-sm-12">
                                                        <div class="form-group">
                                                            <label for="cities"> {% trans from 'user-profile' %} search.zone.cities {% endtrans %}</label>
                                                            <select class="form-control" id="cities" aria-describedby="cities-help">
                                                                <option>1</option>
                                                                <option>2</option>
                                                                <option>3</option>
                                                                <option>4</option>
                                                                <option>5</option>
                                                            </select>
                                                            <small id="cities-help" class="form-text text-muted"> {% trans from 'user-profile' %} search.zone.cities_text {% endtrans %}</small>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card">
                                            <div class="card-header  bg-white text-gray-dark" role="tab" id="headingTwo">
                                                <h5 class="mb-0">
                                                    <a class="collapsed text-gray-dark" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                                        {% trans from 'user-profile' %} search.age.title {% endtrans %}
                                                    </a>
                                                </h5>
                                            </div>
                                            <div id="collapseTwo" class="collapse bg-faded" role="tabpanel" aria-labelledby="headingTwo">
                                                <div class="card-block">
                                                    <div class="row">
                                                        <div class=" col-sm-12 col-md-6">
                                                            <div class="form-group">
                                                                <label for="age-min"> {% trans from 'user-profile' %} search.age.min {% endtrans %}</label>
                                                                <input type="number" class="form-control" id="age-min" aria-describedby="age-min-help" placeholder="" min="0">
                                                                <small id="age-min-help" class="form-text text-muted"> {% trans from 'user-profile' %} search.age.min_text {% endtrans %}</small>
                                                            </div>
                                                        </div>
                                                        <div class=" col-sm-12 col-md-6">
                                                            <div class="form-group">
                                                                <label for="age-max"> {% trans from 'user-profile' %} search.age.max {% endtrans %}</label>
                                                                <input type="number" class="form-control" id="age-max" aria-describedby="age-max-help" placeholder="" min="0">
                                                                <small id="age-max-help" class="form-text text-muted"> {% trans from 'user-profile' %} search.age.max_text {% endtrans %}</small>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card">
                                            <div class="card-header  bg-white text-gray-dark" role="tab" id="headingThree">
                                                <h5 class="mb-0">
                                                    <a class="collapsed text-gray-dark" data-toggle="collapse" data-parent="#accordion" href="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                                                        {% trans from 'user-profile' %} search.surface.title {% endtrans %}
                                                    </a>
                                                </h5>
                                            </div>
                                            <div id="collapseThree" class="collapse bg-faded" role="tabpanel" aria-labelledby="headingThree">
                                                <div class="card-block">
                                                    <div class="row">
                                                        <div class=" col-sm-12 col-md-6">
                                                            <div class="form-group">
                                                                <label for="surface-min"> {% trans from 'user-profile' %} search.surface.min {% endtrans %}</label>
                                                                <input type="number" class="form-control" id="surface-min" aria-describedby="age-min-help" placeholder="" min="0">
                                                                <small id="surface-min-help" class="form-text text-muted"> {% trans from 'user-profile' %} search.surface.min_text {% endtrans %}</small>
                                                            </div>
                                                        </div>
                                                        <div class=" col-sm-12 col-md-6">
                                                            <div class="form-group">
                                                                <label for="surface-max"> {% trans from 'user-profile' %} search.surface.max {% endtrans %}</label>
                                                                <input type="number" class="form-control" id="surface-max" aria-describedby="surface-max-help" placeholder="" min="0">
                                                                <small id="surface-max-help" class="form-text text-muted"> {% trans from 'user-profile' %} search.surface.max_text {% endtrans %}</small>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class=" col-sm-12 col-md-6">
                                        <div class="form-group">
                                            <label for="professsion">{% trans from 'user-profile' %} search.profession {% endtrans %}</label>
                                            <select class="form-control" id="professsion" aria-describedby="professsion-help">
                                                <option>1</option>
                                                <option>2</option>
                                                <option>3</option>
                                                <option>4</option>
                                                <option>5</option>
                                            </select>
                                            <small id="professsion-Help" class="form-text text-muted">{% trans from 'user-profile' %} search.profession_text {% endtrans %}</small>
                                        </div>
                                    </div>

                                    <div class=" col-sm-12 col-md-6">
                                        <div class="form-group">
                                            <label for="sex">{% trans from 'user-profile' %} search.sex {% endtrans %}</label>
                                            <select class="form-control" id="sex" aria-describedby="sex-help">
                                                <option>1</option>
                                                <option>2</option>
                                                <option>3</option>
                                                <option>4</option>
                                                <option>5</option>
                                            </select>
                                            <small id="sex-Help" class="form-text text-muted">{% trans from 'user-profile' %} search.sex_text {% endtrans %}</small>
                                        </div>
                                    </div>

                                </div>
                                <button type="submit" class="btn btn-primary">{% trans from 'user-profile' %} search.btn {% endtrans %}</button>
                            </form>
                        </div>
                    </div>
                </div>
                <div id="content" class="row ">
                    <div class="row">
                        {% for i in 1..10  %}
                            <div class="col-sm-12 col-md-4">
                                <div class="card bg-faded">
                                    <div class="card-block text-center">
                                        <img src="{{ asset('data/img/avatar.png') }}" alt="not found" class="img-thumbnail">
                                        <br>
                                        {% if i%2==0 %}
                                            <div class="row">
                                                <div class="col-1">
                                                    <div class="rounded-circle connect" ></div>
                                                </div>
                                                <div class="col name text-left"> <strong > Danick takam (40ans)   &nbsp;</strong></div>
                                                <div class="col-12 text-left">
                                                    <span class="text-muted country">Cameroun</span>
                                                </div>
                                            </div>
                                        {% else %}
                                            <div class="row">
                                                <div class="col-1">
                                                    <div class="rounded-circle no-connect" ></div>
                                                </div>
                                                <div class="col name text-left"> <strong > Danick takam (40ans)   &nbsp;</strong></div>
                                                <div class="col-12 text-left">
                                                    <span class="text-muted country ">Cameroun</span>
                                                    <span class="text-grey pull-right">{% trans from 'user-profile' %} see {% endtrans %} {{  i ~'/11/2017' }}</span>
                                                </div>
                                            </div>
                                        {% endif %}

                                        <div class="row text-left bg-white">
                                            <div class="col">
                                                <a href=""><span class="fa fa-thumbs-o-up">{% trans from 'user-profile' %} like {% endtrans %}</span></a>
                                            </div>
                                            <div class="col" style="display: none;">
                                                <a href=""><span class="fa fa-comment-o">{% trans from 'user-profile' %} comment {% endtrans %}</span></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>

        <div class="col" id="publicity">
            {% include "MainBundle:Inc:publicity.html.twig" %}
        </div>
    </div>
{% endblock %}


{% block footer %}

{% endblock %}
{% block myjs %}
    {# mettre des liens vers des pages externe js si c'est  necessaire #}
    <script>
        $(function(){
            $('.carousel').carousel({
                interval: 2000
            });
        })
    </script>
{% endblock %}

