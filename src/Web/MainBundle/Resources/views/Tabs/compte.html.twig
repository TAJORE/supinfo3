                                <option value="F">{% trans from 'register' %} form.body.genderList.2 {% endtrans %}</option>
                            </select>#}
                        </div>
                        <div class="col-sm-6 col">
                            <input type="text" id="firstName" placeholder="{% trans from 'photo' %} sub.tabs.myProfilDetail.FirstName {% endtrans %}" class="form-control ">
                            <input type="text" id="profession" placeholder="{% trans from 'photo' %} sub.tabs.myProfilDetail.profession {% endtrans %}" class="form-control col ">
                        </div>
