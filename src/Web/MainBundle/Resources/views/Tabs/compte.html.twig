                            <input type="text" id="city" placeholder="{% trans from 'photo' %} sub.tabs.myProfilDetail.ville {% endtrans %}" class="form-control">
                            <input type="email" id="email" placeholder="email" class="form-control">
                           {# <select class="custom-select form-control " id="gender">
                                <option selected value="">{% trans from 'register' %} form.placeholder.gender {% endtrans %}</option>
