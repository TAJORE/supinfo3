<div class="card">
    <div class="card-block">
        <h4 class="card-title"> <strong>{{ app.user.lastname~' '~app.user.firstname }}</strong>,</h4>
        <h6 class="card-subtitle mb-2 text-muted">{% trans from 'photo' %} body.title  {% endtrans %}</h6>
        <p class="card-text">{% trans from 'photo' %} body.content  {% endtrans %}  </p>
        <p class="text-muted">{% trans from 'photo' %} body.required  {% endtrans %}</p>
        <div class="" id="photoZone">
            <div class="row justify-content-md-center">
                <div class="col-6">
                    <span class="fa fa-4x fa-facebook-official"></span>
                    <br>
                    <span>{% trans from 'photo' %} body.option.1  {% endtrans %}</span>
                </div>
                <div class="col-6">
                    <span class="fa fa-4x fa-camera"></span>
                    <br>
                    {% trans from 'photo' %} body.option.2  {% endtrans %}
                </div>
            </div>
            <div class="row align-items-center bg-faded" id="drapAnddrop">
               <div class="col-12">
                   <button class="btn btn-lg btn-primary" >{% trans from 'photo' %} body.option.3  {% endtrans %}</button>
                   <br>
                   {% trans from 'photo' %} body.option.4  {% endtrans %}
               </div>
            </div>
        </div>
    </div>
</div>